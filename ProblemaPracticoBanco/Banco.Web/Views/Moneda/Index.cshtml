@model Banco.Web.Models.MonedaViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Nuevo", "Create", "", new { @class = "btn btn-info" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Moneda_ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moneda_Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Moneda_Abreviatura)
        </th>
        <th></th>
    </tr>
    @foreach (var item in Model.ListaMoneda)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Moneda_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moneda_Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Moneda_Abreviatura)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", item, new { @class = "btn btn-warning" }) 
                 @Html.ActionLink("Borrar", "Delete", item, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }
</table>
